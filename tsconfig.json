{
  "compileOnSave": true,
  "buildOnSave": false,
  "compilerOptions": {
    "lib": ["es5", "es6", "es2020", "DOM"],
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src", "test", "sql", "storage"]
}
